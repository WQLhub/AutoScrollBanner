<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">

    <com.example.lenovo.myapplication.banner.components.LoopViewPager
        android:id="@+id/vp_ad_view_pager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <com.example.lenovo.myapplication.banner.components.LoopHomeBezierPageIndicator
        android:id="@+id/idc_ad_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:fillColor="#e7e7e7"
        app:pageColor="#FF4545"
        app:radius="2.5dp"/>
</merge>